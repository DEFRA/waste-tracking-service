meta {
  name: Receive Movement - Basic + Hazardous
  type: http
  seq: 3
}

post {
  url: {{baseUrl}}/movements/receive
  body: json
  auth: inherit
}

headers {
  ~Authorization: {{ManuallyObtainedAccessToken}}
}

body:json {
  {
    "receivingSiteId": "{{receivingSiteId}}",
    "hazardousWasteConsignmentNumber": "HWCN789012",
    "waste": [
      {
        "ewcCodes": ["020101"],
        "wasteDescription": "Hazardous waste with heavy metal components from industrial process",
        "form": "Mixed",
        "numberOfContainers": 12,
        "typeOfContainers": "Steel drums and containers",
        "quantity": {
          "metric": "Tonnes",
          "amount": 0.75,
          "isEstimate": false
        },
        "hazardous": {
          "components": [
            {
              "name": "Mercury",
              "concentration": 0.25
            },
            {
              "name": "Lead",
              "concentration": 0.45
            },
            {
              "name": "Cadmium",
              "concentration": 0.12
            }
          ]
        }
      }
    ],
    "carrier": {
      "organisationName": "Hazardous Carrier Ltd",
      "address": "123 Hazardous Street, Hazardous City, HC1 2AB",
      "emailAddress": "hazardous@carrier.com",
      "phoneNumber": "01234567890",
      "meansOfTransport": "Road"
    },
    "acceptance": {
      "acceptingAll": true
    },
    "receipt": {
      "dateTimeReceived": "{{timestamp}}",
      "disposalOrRecoveryCodes": [
        {
          "code": "R1",
          "quantity": {
            "metric": "Tonnes",
            "amount": 0.75,
            "isEstimate": false
          }
        }
      ]
    }
  }
}

vars:post-response {
  globalMovementId: res.body.globalMovementId
}

script:pre-request {
  const now = new Date().toISOString();
  bru.setVar('timestamp', now);
}
